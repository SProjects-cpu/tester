generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Startup {
  id               String            @id @default(uuid())
  name             String
  founder          String
  email            String?
  phone            String?
  sector           String
  stage            String            @default("Onboarded")
  onboardedDate    DateTime          @default(now()) @map("onboarded_date")
  graduatedDate    DateTime?         @map("graduated_date")
  description      String?
  website          String?
  fundingReceived  Float?            @default(0) @map("funding_received")
  employeeCount    Int?              @default(0) @map("employee_count")
  revenueGenerated Float?            @default(0) @map("revenue_generated")
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  dpiitNo          String?           @map("dpiit_no")
  recognitionDate  DateTime?         @map("recognition_date")
  bhaskarId        String?           @map("bhaskar_id")
  
  // Stage transition tracking
  previousStage     String?          @map("previous_stage")
  stageChangedAt    DateTime?        @map("stage_changed_at")
  stageChangeReason String?          @map("stage_change_reason")
  
  // Quit metadata
  quitReason        String?          @map("quit_reason")
  quitDate          DateTime?        @map("quit_date")
  quitYear          Int?             @map("quit_year")
  
  // Registration Info fields
  magicCode         String?          @unique @map("magic_code")
  city              String?
  stageOfIdea       String?          @map("stage_of_idea")
  solution          String?
  hasPatent         String?          @map("has_patent")
  patentNumber      String?          @map("patent_number")
  isRegistered      String?          @map("is_registered")
  registrationDate  DateTime?        @map("registration_date")
  socialMedia       String?          @map("social_media")
  founderAge        Int?             @map("founder_age")
  founderGender     String?          @map("founder_gender")
  college           String?
  address           String?
  referredFrom      String?          @map("referred_from")
  sessionNumber     String?          @map("session_number")
  registeredDate    DateTime?        @map("registered_date")
  month             String?
  timeSlot          String?          @map("time_slot")
  clinicalMentoring Boolean?         @default(false) @map("clinical_mentoring")
  followUpRemark    String?          @map("follow_up_remark")
  domain            String?
  logo              String?
  officePhoto       String?          @map("office_photo")
  
  // Onboarding details
  onboardingDescription String?      @map("onboarding_description")
  agreementDate         DateTime?    @map("agreement_date")
  engagementMedium      String?      @map("engagement_medium")
  agreementCopy         String?      @map("agreement_copy") @db.Text
  
  achievements     Achievement[]
  agreements       Agreement[]
  documents        Document[]
  oneOnOneMeetings OneOnOneMeeting[]
  progressHistory  ProgressHistory[]
  smcMeetings      SMCMeeting[]
  fmcMeetings      FMCMeeting[]
  revenueEntries   RevenueEntry[]
  stageHistory     StageTransitionHistory[]

  @@map("startups")
}

model Achievement {
  id          String   @id @default(uuid())
  startupId   String   @map("startup_id")
  title       String
  description String?
  type        String
  date        DateTime @default(now())
  mediaUrl    String?  @map("media_url")
  isGraduated Boolean  @default(false) @map("is_graduated")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  startup     Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("achievements")
}

model ProgressHistory {
  id        String   @id @default(uuid())
  startupId String   @map("startup_id")
  metric    String
  value     Float
  date      DateTime @default(now())
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  startup   Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("progress_history")
}

model OneOnOneMeeting {
  id          String   @id @default(uuid())
  startupId   String   @map("startup_id")
  date        DateTime
  mentor      String?
  topic       String?
  notes       String?
  actionItems String?  @map("action_items")
  status      String   @default("scheduled")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  startup     Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("one_on_one_meetings")
}

model SMCMeeting {
  id        String   @id @default(uuid())
  startupId String   @map("startup_id")
  date      DateTime
  agenda    String?
  decisions String?
  attendees String?
  status    String   @default("scheduled")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  startup   Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("smc_meetings")
}

model FMCMeeting {
  id        String   @id @default(uuid())
  startupId String   @map("startup_id")
  date      DateTime
  agenda    String?
  decisions String?
  attendees String?
  status    String   @default("scheduled")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  startup   Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("fmc_meetings")
}

model Agreement {
  id         String    @id @default(uuid())
  startupId  String    @map("startup_id")
  title      String
  type       String
  fileUrl    String    @map("file_url")
  uploadDate DateTime  @default(now()) @map("upload_date")
  expiryDate DateTime? @map("expiry_date")
  status     String    @default("active")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  startup    Startup   @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("agreements")
}

model Settings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

model Guest {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  phone       String?
  organization String?
  purpose     String?
  isActive    Boolean  @default(true) @map("is_active")
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("guests")
}

model Document {
  id             String        @id @default(uuid())
  startupId      String        @map("startup_id")
  revenueEntryId String?       @map("revenue_entry_id")
  filename       String        @map("file_name")
  fileType       String        @map("file_type")
  fileSize       Int           @map("file_size")
  fileUrl        String?       @map("file_url")
  storagePath    String        @map("storage_path")
  uploadedAt     DateTime      @default(now()) @map("uploaded_at")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  startup        Startup       @relation(fields: [startupId], references: [id], onDelete: Cascade)
  revenueEntry   RevenueEntry? @relation(fields: [revenueEntryId], references: [id], onDelete: SetNull)

  @@index([startupId])
  @@index([revenueEntryId])
  @@map("documents")
}


model RevenueEntry {
  id          String     @id @default(uuid())
  startupId   String     @map("startup_id")
  amount      Float
  date        DateTime   @default(now())
  description String?
  source      String?
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  startup     Startup    @relation(fields: [startupId], references: [id], onDelete: Cascade)
  documents   Document[]

  @@index([startupId])
  @@map("revenue_entries")
}

model StageTransitionHistory {
  id          String   @id @default(uuid())
  startupId   String   @map("startup_id")
  fromStage   String   @map("from_stage")
  toStage     String   @map("to_stage")
  reason      String?
  performedBy String?  @map("performed_by")
  createdAt   DateTime @default(now()) @map("created_at")
  
  startup     Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@index([fromStage])
  @@index([toStage])
  @@map("stage_transition_history")
}
